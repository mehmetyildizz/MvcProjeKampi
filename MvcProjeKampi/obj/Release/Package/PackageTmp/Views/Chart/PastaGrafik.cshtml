
@{
    ViewBag.Title = "PastaGrafik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript" src="https://www.google.com/jsapi"></script>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
        $(document).ready(function () {
            $.ajax({
                type: "POST",
                dataType: "json",
                contentType: "application/json",
                url: '@Url.Action("CategoryChart", "Chart")',
                success: function (result) {
                    google.charts.load('current', {
                        'packages': ['corechart']
                    });
                    google.charts.setOnLoadCallback(function () {
                        drawChart(result);
                    });
                }
            });
        });

        function drawChart(result) {
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'KategoriAdi');
            data.addColumn('number', 'KategoriSayisi');
            var dataArray = [];

            $.each(result, function (i, obj) {
                dataArray.push([obj.KategoriAdi, obj.KategoriSayisi]);
            });
            data.addRows(dataArray);

            var columnChartOptions = {
                /*backgroundColor: { fill: 'transparent' },*/
                is3D: true,
                vAxis: { minValue: 0 },
                title: "Kategori - Başlık Pasta Grafiği",
                width: 800,
                height: 400,
                bar: { groupWidth: "80%" },
            };

            var columnChart = new google.visualization.PieChart(document
                .getElementById('Piechart_div'));

            columnChart.draw(data, columnChartOptions);
        }
</script>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Grafikler</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Kategori - Başlık Pasta Grafiği</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="padding-right: 0rem; padding-left: 0rem">
                        <div id="Piechart_div"></div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->