@using EntityLayer.Concrete
@model List<Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>İletişim Mesajları</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        @Html.Action("MesajKlasorPartial", "Contact")
        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">İletişim Mesajları</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body p-0">
                    <div class="table-responsive mailbox-messages">
                        <table id="example2" class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Kime
                                    </th>
                                    <th>
                                        Konu - Mesaj
                                    </th>
                                    <th>
                                        Tarih
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="mailbox-star"><a href="/Contact/IletisimDetay/@item.ContactID"><i class="far fa-trash-alt"></i></a></td>
                                        <td class="mailbox-name"><a href="/Contact/IletisimDetay/@item.ContactID">@item.UserName</a></td>
                                        <td class="mailbox-subject">
                                            <b>@item.Subject</b> - @item.Message.Substring(0, 30)...
                                        </td>
                                        <td class="mailbox-date">
                                            @{

                                                TimeSpan? Difference = DateTime.Now - item.MessageDate;

                                            }

                                            @if (@Difference.Value.Days > 0)
                                            {
                                                <span>@Difference.Value.Days gün, @Difference.Value.Hours saat, @Difference.Value.Minutes dakiaka önce</span>
                                            }
                                            else if (@Difference.Value.Hours > 0)
                                            {
                                                <span>@Difference.Value.Hours saat, @Difference.Value.Minutes dakiaka önce</span>
                                            }
                                            else if (@Difference.Value.Minutes > 0)
                                            {
                                                <span>@Difference.Value.Minutes dakiaka önce</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table -->
                    </div>
                    <!-- /.mail-box-messages -->
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->