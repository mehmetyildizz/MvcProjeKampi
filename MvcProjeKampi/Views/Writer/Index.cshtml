@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Yazarlar Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yazarlar</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Yazar Listesi</h3>
                        <a href="/Writer/YazarEkle" class="btn bg-gradient-secondary btn-sm float-right">Yeni Yazar Ekle</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                                    <div class="card bg-light d-flex flex-fill">
                                        <div class="card-header text-muted border-bottom-0">
                                            @item.WriterTitle
                                        </div>
                                        <div class="card-body pt-0">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@item.WriterName @item.WriterSurName</b></h2>
                                                    <p class="text-muted text-sm"><b>Hakkında: </b>@item.WriterAbout.</p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small"><span class="fa-li"><i class="nav-icon far fa-envelope"></i></span> E-mail: @item.WriterMail</li>
                                                        <li class="small">@item.WriterImage</li>
                                                    </ul>
                                                </div>
                                                <div class="col-5 text-center">
                                                    <img src="~/AdminLTE-3.1.0/dist/img/user1-128x128.jpg" alt="user-avatar" class="img-circle img-fluid">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a href="#" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-comments"></i> Yazarın Başlıkları
                                                </a>
                                                <a href="/Writer/YazarGuncelle/@item.WriterID" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-user"></i> Profil Düzenle
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
