@using EntityLayer.Concrete
@model List<Talent>
@{
    ViewBag.Title = "Yetenek Kartı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    string color2 = "";
    string color3 = "";
    string status = "";
    string butonstatus = "";}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yetenekler</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Yetenek Listesi</h3>
                        <a href="/Talent/YetenekEkle" class="btn bg-gradient-secondary btn-sm float-right">Yeni Yetenek Ekle</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="padding-right: 0rem; padding-left: 0rem">
                        <table id="example1" class="table table-striped projects">
                            <thead>
                                <tr>
                                    <th style="width: 1%">
                                        #
                                    </th>
                                    <th style="width: 25%">
                                        Yetenek Adı
                                    </th>
                                    <th style="width: 10%">
                                        Seviyesi
                                    </th>
                                    <th style="width: 20%">
                                        Adı Soyadı
                                    </th>
                                    <th style="width: 10%" class="text-center">
                                        Durum
                                    </th>
                                    <th style="width: 34%">
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.TalentID
                                        </td>
                                        <td>
                                            @item.TalentName
                                        </td>
                                        <td>
                                            @item.TalentValue
                                        </td>
                                        <td>
                                            @item.Writer.WriterName @item.Writer.WriterSurName
                                        </td>
                                        @if (item.TalentStatus == true)
                                        {
                                            status = "Aktif";
                                            butonstatus = "Pasif Yap";
                                            color2 = "badge badge-success";
                                            color3 = "btn btn-danger";
                                        }
                                        else
                                        {
                                            status = "Pasif";
                                            butonstatus = "Aktif Yap";
                                            color2 = "badge badge-danger";
                                            color3 = "btn btn-success";
                                        }
                                        <td class="project-state">
                                            <span class="@color2">
                                                @status
                                            </span>
                                        </td>
                                        <td class="project-actions text-right">
                                            <a class="btn btn-primary btn-sm" href="/Talent/YetenekKarti/@item.WriterID">
                                                <i class="fas fa-folder">
                                                </i>
                                                Yetenek Kartı
                                            </a>
                                            <a class="btn btn-info btn-sm" href="/Talent/YetenekGuncelle/@item.TalentID">
                                                <i class="fas fa-pencil-alt">
                                                </i>
                                                Düzenle
                                            </a>
                                            <a class="@color3 btn-sm" href="/Talent/YetenekAktifPasif/@item.TalentID">
                                                <i class="fas fa-trash">
                                                </i>
                                                @butonstatus
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->