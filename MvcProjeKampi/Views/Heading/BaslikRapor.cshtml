@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "BaslikRapor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Başlıklar</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Başlıklar Listesi</h3>
                        <a href="/Heading/BaslikEkle" class="btn bg-gradient-secondary btn-sm float-right">Yeni Başlık Ekle</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body" style="padding-right: 0rem; padding-left: 0rem">
                        <table id="example1" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Başlık Id</th>
                                    <th>Başlık Adı</th>
                                    <th>Tarih</th>
                                    <th>Yazar</th>
                                    <th>Kategori</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    <tr>
                                        <td>@x.HeadingID</td>
                                        <td>@x.HeadingName</td>
                                        <td>@x.HeadingDate</td>
                                        <td>@x.Writer.WriterName @x.Writer.WriterSurName</td>
                                        <td>@x.Category.CategoryName</td>
                                        <td>@x.HeadingStatus</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->