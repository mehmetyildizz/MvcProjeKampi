@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Main content -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Kategoriler</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- jquery validation -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Ekle</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    @using (Html.BeginForm("KategoriEkle", "Category", FormMethod.Post, new { @id = "quickForm" }))
                    {
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Kategori Adı</label>
                                @Html.TextBoxFor(x => x.CategoryName, new { @placeholder = "Kategori Adı Giriniz", @class = "form-control", @id = "exampleInputEmail1" })
                                @Html.ValidationMessageFor(x => x.CategoryName, string.Empty, new { @class = "error invalid-feedback d-block", @id = "exampleInputEmail1-error" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Kategori Açıklama</label>
                                @Html.TextAreaFor(x => x.CategoryDescription, new { @placeholder = "Kategori Açıklaması Giriniz", @class = "form-control", @id = "exampleInputPassword1" })
                                @Html.ValidationMessageFor(x => x.CategoryDescription, string.Empty, new { @class = "error invalid-feedback d-block", @id = "exampleInputPassword1-error" })
                            </div>
                            <div class="form-group">
                                <label for="exampleCheck1">Kategori Durumu</label><br />
                                <style>
                                    .toggle.android label {
                                        font-weight: 400;
                                    }
                                </style>
                                @Html.CheckBoxFor(x => x.CategoryStatus, new { id = "exampleCheck1", @checked = true, data_toggle = "toggle", data_style = "android", data_on = "Kategori Aktif", data_off = "Kategori Pasif", data_onstyle = "success", data_offstyle = "danger", data_height = "38", data_width = "150" })
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    }
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
            <!-- right column -->
            <div class="col-md-6">

            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->